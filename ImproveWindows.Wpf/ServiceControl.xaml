<UserControl x:Class="ImproveWindows.Wpf.ServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ImproveWindows.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border>
            <DockPanel LastChildFill="True">
                <Label Name="Name" DockPanel.Dock="Top" FontWeight="Bold"></Label>
                <Label Name="Status" DockPanel.Dock="Top" FontWeight="Bold"></Label>
                <ScrollViewer Name="ScrollViewer" Padding="5px">
                    <TextBlock Name="Logs" TextWrapping="Wrap"></TextBlock>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>